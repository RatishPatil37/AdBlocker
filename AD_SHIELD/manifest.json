{
    "name": "Ad Shield",
    "version": "1.0.0", 
    "description": "A simple and lightweight extension that blocks annoying ads on websites, enhancing your browsing experience by removing unwanted content.",
    "manifest_version": 3,
    "permissions": [
        "declarativeNetRequest",
        "declarativeContent"
    ],
    "page_action": {
        "default_icon": {
            "icon16": ["icon16.png"] 
        },
        "default_title": "AD SHIELD"
    },
    "content_scripts": [
        {
            "matches": [ "*://*.doubleclick.net/*",  
                         "*://*.googleadservices.com/*"],
                         "css": ["hide_ads.css"]
        }
    ],
    "declarative_net_request":{
        "rule_resources":[
            {
                "id":   "ruleset_1",
                "enabled":  true,
                "path": "rules.json"
            }
        ]
    }
}